<project name="package-nuget-stage">

	<target name="PackageNuget">
	
		<copy file="${root.dir}\Sugar.nuspec" tofile="${root.dir}\${nuspec.name}" />

		<xmlpoke file="${root.dir}\${nuspec.name}" 
                 xpath="/package/metadata/version" 
                 value="${package.version}" />
				 
		<exec program="nuget.exe" basedir="${nuget.location}" workingdir=".">
			<arg value="pack" />
			<arg value="${root.dir}\${nuspec.name}" />
		</exec>

	</target>

</project>